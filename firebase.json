{
"hosting": {
"public": "_site",
"ignore": [
  "firebase.json",
  "Gemfile",
  "Gemfile.lock",
  "Rakefile",
  "CNAME",
  "README.md",
  "**/.*",
  "**/node_modules/**"
],
"rewrites": [
  {
    "source": "**",
    "destination": "/index.html"
  }
],
"headers": [{
  "source" : "**",
  "headers" : [{
    "key" : "Cache-Control",
    "value" : "max-age=31536000"
  }]
}]
}
}